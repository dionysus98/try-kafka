<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Set the default logging level for all loggers to INFO or higher -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

  <!-- Optionally, set specific namespaces to a different level if needed -->
  <!-- <logger name="com.example.mynamespace" level="DEBUG" /> -->
</configuration>
